<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/main"
    tools:context=".ResultActivity"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant Disease Result"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <ImageView
            android:id="@+id/result_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp"
            android:background="@drawable/image_border"/>

        <!-- Prediction -->
        <TextView
            android:id="@+id/predicted_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disease: ---"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/prediction_confidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confidence: ---"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/treatment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treatment"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/treatment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/precautions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precautions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/precautions_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@android:color/white"
            android:background="@color/green"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>
